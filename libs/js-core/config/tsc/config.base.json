{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true, // generate .d.ts file
    "moduleResolution": "node",
    "strictNullChecks": false,
    "newLine": "lf",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "../../src"
  ],
  "exclude": [
    "../../**/e2e/*",
    "../../**/test/*",
    "../../**/mock/*",
    "../../**/template*/*",
    "../../**/node_modules/*",
    "../../**/deprecated/*",
    "../../**/test.ts",
    "../../**/*.spec.ts"
  ]
}
